<body>
    <div class="main">
        <div class="login">
        <h1>Her Voice Matters</h1>
        <!-- <img src="https://img.freepik.com/premium-vector/flat-women-s-history-month-illustration_23-2149258208.jpg?w=740" alt=""> -->
        </div>
        <div class="login-det">
                        <div class="headerSignUp">
                            <h1>Login here - Users</h1>
                        </div>
                        <div class="formLogin">
                            <form action="/userLogin" method="POST">
                                <div class="signup-inputs">
                                    <label for="useremail">Email</label>
                                    <input type="email" id="useremail" name="useremail" autocomplete="off" required>
                                </div>
        
                                <div class="signup-inputs signup-inputs2">
                                    <label for="userpassword">Password</label>
                                    <input type="password" id="userpassword" name="userpassword" autocomplete="off" required>
                                </div>
                                <div class="signup-buttons">
                                    <button type="submit">Login</button>
                                </div>
                            </form>
                        </div>
                        <div class="footerSignUp">
                            <p style="font-weight: 600;"> New user? <a href="/signupUser">Create account</a></p>
                            <p class="passErrMessage"><%= passErrMessage %></p>
                        </div>
                    
        


        </div>

    </div>
   
    
</body>
