.login-det
{
    margin: 100px;
    height: 50%;
    width: 29%;
    background-color: white;
    border-radius: 15px;
    text-align: center;
    font-family: 'Source Code Pro', monospace;
    padding: 26px 10px;
    box-shadow: -1px -1px 10px rgb(255, 255, 255);

}
.login-det div{
    margin: 20px auto;
}
.signup-inputs
{
    display: flex;
    justify-content: space-evenly;
}
.signup-inputs2
{
    padding-right: 13px;
}
.signup-buttons button
{
    height: 2.3rem;
    width: 5.5rem;
    background-color: #dab6ba;
    border-width: 0px;
    border-radius: 6px;
    cursor: pointer;
}
.signup-inputs input

{
    height: 25px;
    outline: none;
    padding: 2px;
    width: 200px;
}
.login h1{
    font-size: 60px;
    color: azure;
    font-family: 'Oswald', sans-serif;
}
.passErrMessage
{
    color: red;
    font-weight: 600;
}
label
{
    font-weight: 600;
}
.login{
    margin: auto;
    width: 40%;
    
}

</style>

