<body>
    <div class="comp-header">
        <h1>Register Your Complaint</h1>
    </div>
    <div class="comp-down-div">

        <div class="comp-down-div1">
            <h2>For Central Government Employee</h2>
            <form action="/cgovcomplaint" method="post">
                <div>
                    <label for="cgovname">Name of the Complainant</label>
                    <input type="text" placeholder="Enter Name of the Complaint" id="cgovname" name="cgovname" required>
                </div>

                <div>
                    <label for="cgovdesignation">Designation</label>
                    <input type="text" placeholder="Designation" id="cgovdesignation" name="cgovdesignation" required>
                </div>

                <div>
                    <label for="cgovcontact">Mobile Number</label>
                    <input type="number" placeholder="Mobile Number" id="cgovcontact" name="cgovcontact">
                </div>

                <div>
                    <label for="cgovemail">Email</label>
                    <input type="email" placeholder="Email" id="cgovemail" name="cgovemail" required>
                </div>


                <div>
                    <label for="cgovaadhar">Aadhaar Number</label>
                    <input type="number" placeholder="Aadhaar Number" id="cgovaadhar" name="cgovaadhar" required>
                </div>

                <div>
                    <label for="cgovstate">State:</label>
                    <select name="cgovstate" id="cgovstate" required>
                        <!-- <option value="none">Select state</option> -->
                        <option value="Jharkhand">Jharkhand</option>
                    </select>
                </div>

                <div>
                    <label for="cgovdistrict">Distric:</label>
                    <select name="cgovdistrict" id="cgovdistrict" required>
                        <!-- <option value="none">Select district</option> -->
                        <option value="Ranchi">Ranchi</option>
                        <option value="Bokaro">Bokaro</option>
                        <option value="Koderma">Koderma</option>
                        <option value="Dhanbad">Dhanbad</option>
                    </select>
                </div>


                <div>
                    <label for="cgovorganisation">Ministry/Organisation</label>
                    <select name="cgovorganisation" id="cgovorganisation" placeholder="select" required>
                        <option value="select" selected>none</option>
                        <option value="Ministry of tourism">Ministry of tourism</option>
                        <option value="Ministry of rural development">Ministry of rural development</option>
                        <option value="Ministry of corporate affairs">Ministry of corporate affairs</option>
                        <option value="Ministry of Science and Technology">Ministry of Science and Technology</option>
                    </select>
                </div>

                <div>
                    <label for="cgovaccused">Name(s) of the Accused</label>
                    <input type="text" placeholder="Name of the Accused" id="cgovaccused" name="cgovaccused" required>
                </div>

                <div>
                    <label for="cgovdep">Department of the Accused</label>
                    <input type="text" placeholder="Department of the Accused" id="cgovdep" name="cgovdep" required>
                </div>

                <div>
                    <label for="cgovrel">Working Relationship with Accused</label>
                    <input type="text" placeholder="Working Relationship with Accused" id="cgovrel" name="cgovrel"
                        required>
                </div>


                <div>
                    <p>Have you registered your complaint with ICC</p>
                    <span style="display: flex; align-items: center; justify-content: left;">
                        <span style="display: flex; align-items: center; margin: 0px 20px;">
                            <label for="cgovicc">Yes</label>
                            <input type="radio" style="width: 13px; margin: 0px 5px;" name="cgovicc" id="cgovicc" value="Yes">
                        </span>
                        <span style="display: flex; align-items: center; ">
                            <label for="cgovicc">No</label>
                            <input type="radio" style="width: 13px; margin: 0px 5px;" name="cgovicc" id="cgovicc" value="No">
                        </span>
                    </span>
                </div>

                <div>
                    <label for="cgovbrief">Brief Description</label>
                    <textarea
                        style="border-radius: 5px; border: none; outline: none; padding: 5px; width: 350px; cursor: pointer;"
                        id="cgovbrief" name="cgovbrief" id="cgovbrief" rows="10" cols="20" required></textarea>
                </div>

                <div style="padding-left: 90px; flex-direction: row">
                    <button type="submit" class="buttons">Submit</button>
                    <button type="submit" class="buttons">Reset</button>
                </div>
            </form>
        </div>

